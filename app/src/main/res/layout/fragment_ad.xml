<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.scimmia.mybus.ad.ADFragment">

    <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_ad"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showmethemoney"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:padding="@dimen/fab_margin"
            android:textSize="20sp"
    />
    <EditText
            android:id="@+id/shareurl"
            android:visibility="gone"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
    >
        <Button
                android:id="@+id/ad_showmoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/givemoney"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@android:color/holo_red_dark"
                android:layout_marginLeft="@dimen/list_padding"
                android:layout_marginRight="@dimen/list_padding"
                android:paddingTop="@dimen/list_padding"
                android:paddingBottom="@dimen/list_padding"
        />
        <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/shareto"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="@dimen/list_padding"
                android:layout_marginRight="@dimen/list_padding"
                android:paddingTop="@dimen/list_padding"
                android:paddingBottom="@dimen/list_padding"
        />

    </LinearLayout>

</LinearLayout>
